{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "CLIENT_URL",
        "NEXT_PUBLIC_SERVER_URL",

        "API_PORT",
        "API_MONGODB_URI",
        "API_CLIENT_URL",
        "API_SECRET",
        "API_GOOGLE_CLIENT_ID",
        "API_GOOGLE_CLIENT_SECRET",
        "API_GOOGLE_CALLBACK_URL"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "db:seed": {
            "cache": false,
            "persistent": true
        }
    }
}
